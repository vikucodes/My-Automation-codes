		String [] data=name.split(" ");
		String res="";
		for(String d:data) {
			String result = "";
			String one=d.substring(2);
			for(int i=d.length()-1;i>=0;i--) {
				 result=one+d.charAt(i);
				 
			}
			res=res+result+ " ";
		}
		
		System.out.println(res);
	}	        

	}


