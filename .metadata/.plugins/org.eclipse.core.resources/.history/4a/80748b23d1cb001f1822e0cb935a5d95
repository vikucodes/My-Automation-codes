package String;

public class reverseFirstAndLastString {

	public static void main(String[] args) {
		
		//reverse 1st and last string

		String word="john and charles are two player ";
		
		String [] split=word.split(" ");
		
		String Final_result="";
		
		String target_word="john";
		
		String target_word2="palyer";
		
		for(String value:split)
		{
			
			String reverse="";
			String rev="";
			if(value.equals(target_word)) {
				for(int i=0;i<target_word.length();i++) {
					reverse=target_word.charAt(i)+reverse;
				}
			}
			
			if(value.equals(target_word2)) {
				for(int j=0;j<target_word2.length();j++) {
					rev=target_word2.charAt(j)+rev;

			
	
				} 
				}else {
				reverse+=value;
				rev+=value;
			}
			
			Final_result=Final_result+reverse+rev+" ";
			}
		
		System.out.println(Final_result);
	}

}
