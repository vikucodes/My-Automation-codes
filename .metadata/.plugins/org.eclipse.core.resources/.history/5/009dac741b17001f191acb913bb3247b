package mavenclass.firstclass;

import java.util.concurrent.TimeUnit;

import org.openqa.selenium.Alert;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.interactions.Actions;

import io.github.bonigarcia.wdm.WebDriverManager;

public class SeleniumLacture {

	  

	public static void main(String[] args) throws InterruptedException {
		WebDriverManager.chromedriver();
		WebDriver driver=new ChromeDriver();
		
		driver.get("https://www.way2automation.com/angularjs-protractor/banking/#/login");
		driver.findElement(By.xpath("//button[@ng-click='manager()']")).click();
		driver.manage().window().maximize();
		driver.findElement(By.xpath("//button[@ng-click='addCust()']")).click();
		Thread.sleep(10000);
		driver.findElement(By.xpath("//input[@placeholder='First Name']")).sendKeys("Vikas");
		driver.findElement(By.xpath("//input[@placeholder='Last Name']")).sendKeys("kumar");
		driver.findElement(By.xpath("//input[@placeholder='Post Code']")).sendKeys("111121");
		driver.findElement(By.xpath("//button[@type='submit']")).click();
		
		Alert alert=driver.switchTo().alert();
		String textDisplayed=alert.getText();
		System.out.println(textDisplayed);
		alert.accept();
		Thread.sleep(3000);
		driver.quit();
		//Actions a=new Actions(driver);
		//a.moveToElement(driver.findElement(null), 0, 0)
		
	}

}
