<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

<properties>
<property name="basePath">./logs</property>


</properties>
  <Appenders>
    <!-- Console Logging -->
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
    </Console>

    <!-- XML File Logging -->
    <File name="XMLFileLogger" fileName="logs/test-log.xml">
      <XMLLayout />
    </File>
  </Appenders>

  <Loggers>
    <!-- Application loggers -->
    <Root level="info">
      <AppenderRef ref="Console" />
      <AppenderRef ref="XMLFileLogger" />
    </Root>
  </Loggers>
</Configuration>
